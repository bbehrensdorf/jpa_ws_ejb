<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <locale-config>
            <default-locale>de</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <message-bundle>
            MyMessages
        </message-bundle>
    </application>
    <validator>
        <validator-id>ziehungZahlenValidator</validator-id>
        <validator-class>wbs.web.validator.ZiehungZahlenValidator</validator-class>
    </validator>
    <validator>
        <validator-id>ziehungDatumValidator</validator-id>
        <validator-class>wbs.web.validator.ZiehungDatumValidator</validator-class>
    </validator>
    <converter>
        <converter-id>ziehungConverter</converter-id>
        <converter-class>wbs.web.converter.ZiehungConverter</converter-class>
    </converter>
    <navigation-rule>
        <from-view-id>/admin/ziehungErfassen.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{ziehungController.senden}</from-action>
            <from-outcome>ziehungeingetragen</from-outcome>
            <to-view-id>/admin/zeigZiehungsDaten.faces</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/cleanDatabase.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>cleaned</from-outcome>
            <to-view-id>/admin/index.faces</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/populateDatabase.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{populateController.populateDatabase()}</from-action>
            <from-outcome>populated</from-outcome>
            <to-view-id>/admin/index.faces</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/user/lottoscheinEinreichen.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{lottoscheinController.senden()}</from-action>
            <from-outcome>ok</from-outcome>
            <to-view-id>/user/lottoscheinEinreichen_ok.faces</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/user/lottoscheinEinreichen_ok.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{lottoscheinController.generateQuittung()}</from-action>
            <from-outcome>ok</from-outcome>
            <to-view-id>/user/lottoscheinEinreichen_ok.faces</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
